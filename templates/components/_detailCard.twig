{% set products = craft.entries.section('product').limit(1) %}

    {% do craft.app.view.registerCssFile('@web/css/SingleCard.css') %}

<body>
<section>
    <main>
        <section id="product-page">
            {% for product in products %}
            {% set image = product.productimage.one() %}
            <div class="product-details">
                <div class="product-img">
                    <img src="{{ image.url }}" alt="{{ product.title }}" class="product-image" />
                </div>
                <div class="product-text">
                    <h2 class="product-category">Product generation </h2>
                    <h3>{{ product.title }}</h3>
                    <span class="product-price">Price: ${{ product.productpricetag }}</span><br>

                    <p>{{ product.productdescription }}</p><br>
                    <div class="product-button">
                        <button @click="" class="add-cart-btn" id="button2">Add to Cart</button>
                    </div>
                    <a href="#" class="help-btn">Need Any Help?</a>
                </div>
            </div>
            {% endfor %}
        </section>
    </main>
</section>
</body>


